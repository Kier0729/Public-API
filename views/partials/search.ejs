<%- include("header.ejs") %>
<div class="searchDiv">
    <form action="/search" method="POST"> <!-- POST method for /search endpoint -->
        <Label>Persona Name/IGN: <input type="text" name="personaName" placeholder="IGN"></Label>
        <input type="submit" value="OK">
      </form>
</div>
<% if(locals.homePro){ %> <!-- if homePro is present proceed below(Show players and add Buttons(Prev/Next))-->
<div class="bodyMain">
    <% var y = (x+15) %> <!-- make the value of y x+15 to show 15 players -->
    <% if (y < homeProLength) { %> <!-- if current value of y is < homeProLength end the for loop base of y -->
    <% for (x = x; x < y; x++){ %>   
    <div class="bodyDiv">
        <div class="picHome"><img class="pic" src="<%= homePro[x].avatarfull %>" alt=""></div>
        <div class="proDet"><p>IGN: <%= homePro[x].personaname %></p> <p>ACCOUNT ID: <%= homePro[x].account_id %></p></div>
    </div>
    
    <% } %>
    <% } else { %> <!-- if current value of y > homeProLength end the for loop base on homeProLength to make -->
                   <!-- sure the x will not exceed to homeProLength -->
        <% for (x = x; x < homeProLength; x++){ %>    
            <div class="bodyDiv">
                <div class="picHome"><img class="pic" src="<%= homePro[x].avatarfull %>" alt=""></div>
                <div class="proDet"><p>IGN: <%= homePro[x].personaname %></p> <p>ACCOUNT ID: <%= homePro[x].account_id %></p></div>
            </div>
    <% } %>
    <% } %>
    </div>
    <form action="GET">
        <div class="nxtprvDiv">
          <div type="submit" onclick="window.location.href='/prevSearch'"><!-- making button for prev -->
            <p>Prev</p>
          </div>
          <div type="submit" onclick="window.location.href='/nextSearch'"><!-- making button for next -->
            <p>Next</p>
          </div>
        </div>
      </form>
    <% } else {%> <!-- if homePro is not present -->
        
    <% } %>        
<%- include("footer.ejs") %>